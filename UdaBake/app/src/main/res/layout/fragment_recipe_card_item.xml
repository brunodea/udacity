<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_recipe"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_margin="5dp"
    android:maxHeight="100dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="3dp"
    card_view:cardBackgroundColor="@color/colorPrimaryLight"
    card_view:cardCornerRadius="2dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView android:id="@+id/iv_recipe_item_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/recipe_image_descr"
            android:src="@drawable/default_recipe_image"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:foregroundGravity="top"/>

        <TextView android:id="@+id/tv_recipe_item_name"
            android:textSize="@dimen/big_text"
            android:padding="@dimen/default_layout_padding"
            android:textColor="@android:color/white"
            android:background="#77000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="@dimen/text_margin"/>
    </FrameLayout>
</android.support.v7.widget.CardView>
